                <TextView
                    android:id="@+id/profile_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingBottom="5dp"
                    android:text="Name"
                    android:textColor="@android:color/black"
                    android:textSize="24sp" />

                <TextView
                    android:background="@color/fui_buttonShadow"
                    android:id="@+id/profile_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingBottom="5dp"
                    android:text="E-mail"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/userinfo_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/outline_perm_identity_black_18dp_2"
                    android:drawablePadding="20dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/edit_profile"
                    android:background="@color/fui_buttonShadow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/outline_create_black_18dp"
                    android:drawablePadding="20dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:text="Edit profile"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <Button
                    android:background="@android:color/white"
                    android:id="@+id/my_post"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/outline_library_books_black_18dp"
                    android:drawablePadding="20dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:text="My posts"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <Button
                    android:background="@color/fui_buttonShadow"
                    android:id="@+id/nearby_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/outline_person_pin_circle_black_18dp"
                    android:drawablePadding="20dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:text="nearby users"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <Button
                    android:background="@android:color/white"
                    android:id="@+id/setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/outline_settings_black_18dp"
                    android:drawablePadding="20dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:text="setting"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

