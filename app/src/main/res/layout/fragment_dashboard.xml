<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dashboard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--    <TextView-->
        <!--        android:id="@+id/text_dashboard"-->
        <!--        android:layout_width="match_parent"-->
        <!--        android:layout_height="wrap_content"-->
        <!--        android:layout_marginStart="8dp"-->
        <!--        android:layout_marginTop="8dp"-->
        <!--        android:layout_marginEnd="8dp"-->
        <!--        android:textAlignment="center"-->
        <!--        android:textSize="20sp"-->
        <!--        app:layout_constraintEnd_toEndOf="parent"-->
        <!--        app:layout_constraintStart_toStartOf="parent"-->
        <!--        app:layout_constraintTop_toTopOf="parent" />-->

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:background="@drawable/profile_backgroud"
            android:paddingBottom="5dp">

            <!--                    <de.hdodenhof.circleimageview.CircleImageView-->
            <!--                        android:background="@drawable/border_1"-->
            <!--                        android:id="@+id/profilePortrait"-->
            <!--                        android:layout_width="120dp"-->
            <!--                        android:layout_height="120dp"-->
            <!--                        android:layout_alignParentBottom="true"-->
            <!--                        android:layout_centerHorizontal="true"-->
            <!--                        android:src="@drawable/icon_user" />-->
        </RelativeLayout>

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingBottom="5dp"
            android:text="Name"
            android:textColor="#3B3B3B"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/profile_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/fui_buttonShadow"
            android:gravity="center_horizontal"
            android:paddingBottom="5dp"
            android:text="E-mail"
            android:textColor="#3B3B3B"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/userinfo_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textColor="#9F79EE"
            android:textSize="14sp" />

        <Button
            android:id="@+id/edit_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/fui_buttonShadow"
            android:drawableLeft="@drawable/outline_create_black_18dp"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="Edit profile"
            android:textColor="#8E388E"
            android:textSize="14sp"
            android:textAllCaps="false"/>

        <Button
            android:layout_marginTop="5dp"
            android:id="@+id/my_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:drawableLeft="@drawable/outline_library_books_black_18dp"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="My posts"
            android:textColor="#8E388E"
            android:textSize="14sp"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/setting"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/fui_buttonShadow"
            android:drawableLeft="@drawable/outline_settings_black_18dp"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="Setting"
            android:textColor="#8E388E"
            android:textSize="14sp"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/sign_out"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:drawableLeft="@drawable/outline_reply_all_black_18dp"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="Sign out"
            android:textColor="#8E388E"
            android:textSize="14sp"
            android:textAllCaps="false"/>

    </LinearLayout>
</ScrollView>