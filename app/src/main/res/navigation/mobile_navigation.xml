<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_notifications">

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.e.chatapp.ui.dashboard.DashboardFragment"
        android:label="dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.e.chatapp.ui.notifications.NotificationsFragment"
        android:label="notification"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_friend_list"
        android:name="com.e.chatapp.ui.friendlist.FriendlistFragment"
        android:label="friends_list"
        tools:layout="@layout/fragment_friends_list" />
    <fragment
        android:id="@+id/navigation_channel"
        android:name="com.e.chatapp.ui.channel.ChannelFragment"
        android:label="channel"
        tools:layout="@layout/fragment_channel" />
</navigation>